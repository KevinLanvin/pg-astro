---
import Markdown from '../Markdown.astro'

const { title, background, buttonLabel, suptitle, heroSubtitle } = Astro.props
---

<div class='hero'>
	<div class='title-container'>
		<h2>{suptitle}</h2>
		<h1>{title}</h1>
	</div>
	<div class='subtitle'>
		<Markdown content={heroSubtitle} />
	</div>
	<button>{buttonLabel}</button>
</div>

<style lang='scss' define:vars={{ background: `url(${background})` }}>
	@import '../../styles/_vars';
	.hero {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 3rem;
		align-items: center;
		height: calc(100vh - 6rem);
		background-image: var(--background);
		background-size: cover;
		.title-container {
			display: flex;
			flex-direction: column;
			align-items: center;
		}
		h2 {
			font-family: 'Raleway';
			color: $color-white;
			font-weight: 400;
			font-size: 1rem;
			text-align: center;
			text-shadow: 2px 2px 12px #000;
			text-transform: uppercase;
			letter-spacing: 0.25rem;
			max-width: 65%;
		}
		h1 {
			text-shadow: 2px 2px 12px #000;
			color: $color-white;
			font-family: 'Mathilde';
			font-weight: 400;
			font-size: 6rem;
			text-align: center;
			max-width: 65%;
		}
		button {
			background-color: $color-button;
			color: $color-white;
			border: 2px solid $color-button;
			transition: all 0.3s;
			cursor: pointer;
			margin: 0 auto;
			&:hover {
				border: 2px solid $color-white;
				background-color: initial;
			}
		}
		.subtitle {
			max-width: 65%;
			:global(p) {
				text-align: center;
				color: $color-white;
				font-size: 1.2rem;
				text-shadow: 2px 2px 12px #000;
			}
		}
	}
	@media (max-width: $breakpoint) {
		.hero {
			gap: 3rem;
			h1 {
				font-size: 5rem;
				max-width: 80%;
			}
			h2 {
				font-size: 1rem;
			}
		}
	}
</style>
