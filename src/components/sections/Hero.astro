---
import Markdown from '../Markdown.astro'
import Button from '../Button.astro'

const {
	title,
	background,
	button1Label,
	button1To,
	button1Link,
	button2Label,
	button2To,
	button2Link,
	suptitle,
	heroSubtitle,
} = Astro.props
---

<div class='hero'>
	<div class='title-container'>
		<h2>{suptitle}</h2>
		<h1>{title}</h1>
	</div>
	<div class='subtitle'>
		<Markdown content={heroSubtitle} />
	</div>
	<div class='buttons'>
		{
			(button1To || button1Link) && (
				<Button
					name={button1Label}
					externalLink={button1To}
					link={button1Link}
					classes='heroButton'
				/>
			)
		}
		{
			(button2To || button2Link) && (
				<Button
					name={button2Label}
					externalLink={button2To}
					link={button2Link}
					classes='heroButton'
				/>
			)
		}
	</div>
</div>

<style lang='scss' define:vars={{ background: `url(${background})` }}>
	@import '../../styles/_vars';
	.hero {
		display: flex;
		flex-direction: column;
		justify-content: center;
		gap: 3rem;
		align-items: center;
		height: calc(100vh - 6rem);
		background-image: var(--background);
		background-size: cover;
		margin-top: -$gutter-large;
		.title-container {
			display: flex;
			flex-direction: column;
			align-items: center;
			max-width: 65%;
		}
		h2 {
			font-family: 'Raleway';
			color: $color-white;
			font-weight: 400;
			font-size: 1rem;
			text-align: center;
			text-shadow: 2px 2px 12px #000;
			text-transform: uppercase;
			letter-spacing: 0.25rem;
		}
		h1 {
			text-shadow: 2px 2px 12px #000;
			color: $color-white;
			font-family: 'Mathilde';
			font-weight: 400;
			font-size: 6rem;
			text-align: center;
		}

		.buttons {
			display: flex;
			gap: 1rem;
			justify-content: center;
		}
		:global(.heroButton) {
			background-color: $color-button;
			color: $color-white;
			border: 2px solid $color-button;
			transition: all 0.3s;
			cursor: pointer;
			margin: 0 auto;
			&:hover {
				border: 2px solid $color-white;
				background-color: initial;
			}
		}
		.subtitle {
			max-width: 65%;
			:global(*) {
				text-align: center;
				color: $color-white;
				font-size: 1.2rem;
				text-shadow: 2px 2px 12px #000;
			}
		}
	}
	@media (max-width: $breakpoint) {
		.hero {
			gap: 3rem;
			.title-container {
				max-width: 90%;
			}
			h1 {
				font-size: 5rem;
				max-width: 80%;
			}
			h2 {
				font-size: 1.2rem;
			}
			.subtitle {
				max-width: 90%;
				:global(p) {
					font-size: 1.5rem;
				}
			}
			.buttons {
				flex-direction: column;
				align-items: center;
				font-size: 1.2rem;
				gap: 2rem;
				width: 90%;
			}
		}
	}
</style>
