---
const { title, background, buttonLabel, suptitle } = Astro.props;
---

<div class="hero">
  <h2>{suptitle}</h2>
  <h1>{title}</h1>
  <button>{buttonLabel}</button>
</div>

<style lang="scss" define:vars={{ background: `url(${background})` }}>
  @import "../../styles/_vars";
  .hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 5rem;
    align-items: center;
    height: calc(100vh - 6rem);
    background-image: var(--background);
    background-size: cover;
    margin-top: -$gutter-large;
    h2 {
      font-family: "Raleway";
      color: $color-white;
      font-weight: 400;
      font-size: 3rem;
      text-align: center;
      letter-spacing: 0.5rem;
      text-shadow: 2px 2px 12px #000;
    }
    h1 {
      text-shadow: 2px 2px 12px #000;
      color: $color-white;
      font-family: "Mathilde";
      font-weight: 400;
      font-size: 10rem;
      text-align: center;
      max-width: 50%;
    }
    button {
      background-color: $color-button;
      color: $color-white;
      border: 2px solid $color-button;
      transition: all 0.3s;
      cursor: pointer;
      margin: 0 auto;
      &:hover {
        border: 2px solid $color-white;
        background-color: initial;
      }
    }
  }
  @media (max-width: $breakpoint) {
    .hero {
      gap: 3rem;
      h1 {
        font-size: 5rem;
        max-width: 80%;
      }
      h2 {
        font-size: 1rem;
      }
    }
  }
</style>
