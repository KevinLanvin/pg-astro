---
import { getCollection } from "astro:content";
import Card from "../Card.astro";
import { getFileSlug } from "@src/utils/fileSlug";
import Button from "../Button.astro";

const { title } = Astro.props;
const courses = await getCollection("courses");
---

<section class="courses">
  <h2>{title}</h2>
  <div class="courses__cards">
    {
      courses.map((course) => (
        <Card image={course.data.image}>
          <div class="courses__text">
            <h3>{course.data.title}</h3>
            <p class="courses__main-text">
              <span>A partir de</span>
              <span class="courses__price">{course.data.price}</span>
            </p>
            <Button
              link={getFileSlug(course.data.link)}
              name={course.data.linkLabel}
              alt
            />
          </div>
        </Card>
      ))
    }
  </div>
</section>

<style lang="scss">
  @import "../../styles/_vars.scss";

  .courses {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: $gutter-large;
    &__cards {
      display: grid;
      width: 100%;
      grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
      gap: $gutter;
    }
    &__text {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: $gutter-small;
      h3 {
        height: 3rem;
        text-align: center;
      }
    }
    &__main-text {
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    &__price {
      font-size: 2rem;
    }
  }

  @media (max-width: $breakpoint) {
    .courses__cards {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }
  }
</style>
