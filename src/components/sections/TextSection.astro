---
import Markdown from "../Markdown.astro";
const { title, paragraph } = Astro.props;
---

<section class="textSection">
  <h2>{title}</h2>
  <div>
    <Markdown content={paragraph} />
  </div>
</section>

<style lang="scss">
  @import "../../styles/_vars.scss";

  .textSection {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: $gutter;
  }
</style>
