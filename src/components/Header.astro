---
import { getEntry } from "astro:content";
const { data: header } = await getEntry("header", "header");
const { data: contact } = await getEntry("contact", "contact");
import Topbar from "@components/Topbar.astro";
import Navbar from "@components/Navbar.astro";
const { currentPageTitle } = Astro.props;
---

<header>
  <Topbar tel={contact.tel} email={contact.email} />
  <Navbar
    pages={header.pages}
    logo={header.logo}
    currentPageTitle={currentPageTitle}
  />
</header>

<style lang='scss'>
  header {
    display: unset;
  }
</style>
