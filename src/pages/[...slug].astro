---
import Layout from "@layouts/MainLayout.astro";

import { getCollection } from "astro:content";
import {
  sectionComponents,
  sectionTemplates,
} from "../utils/sectionComponents";

export async function getStaticPaths() {
  const pages = await getCollection("pages");
  const pagePaths = pages.map((page) => ({
    params: { slug: page.slug === "index" ? undefined : page.slug },
    props: page,
  }));
  return pagePaths;
}

const { slug } = Astro.params;
const {
  data: { title, pageContent },
} = Astro.props;
---

<Layout title={title}>
  <title slot='head'>{title}</title>
  <main>
    {
      pageContent.map((sectionProps: any) => {
        const Component =
          sectionComponents[sectionProps._template as sectionTemplates];
        return <Component {...sectionProps} />;
      })
    }
  </main>
</Layout>

<style lang='scss'>
  @import "../styles/_vars.scss";
  main {
    display: flex;
    flex-direction: column;
    gap: $gutter-large;
  }
</style>
